<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_base"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        style="@style/TextAppearance.YYCD.Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, You Can Dance!"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_base" />

    <TextView
        style="@style/TextAppearance.YYCD.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT YOUR LOCATION"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="@dimen/spacing_sm" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_base"
        android:padding="@dimen/spacing_md"
        android:background="@drawable/card_border_primary"
        android:spinnerMode="dropdown"
        android:minHeight="48dp" />

    <!-- Welcome/Logo view shown when no location is selected -->
    <LinearLayout
        android:id="@+id/welcome_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background_tint"
        android:padding="@dimen/spacing_lg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <TextView
            style="@style/TextAppearance.YYCD.Subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Yes, You Can Dance!"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_base" />

        <TextView
            style="@style/TextAppearance.YYCD.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select a location above to view posts"
            android:gravity="center"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- RecyclerView shown when location is selected -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_sm"
        android:visibility="gone" />

    <!-- Visit Website Button at bottom -->
    <Button
        android:id="@+id/visit_website_button"
        style="@style/Widget.YYCD.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visit Website"
        android:layout_marginTop="@dimen/spacing_base" />

</LinearLayout>